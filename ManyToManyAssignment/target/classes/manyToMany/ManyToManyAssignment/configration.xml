<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-configuration PUBLIC  
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"  
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd"> 
<hibernate-configuration>
<!--Session factory  -->
<session-factory>
  <!-- JDBC Properties -->
<property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver </property>
<property name="hibernate.connection.url">jdbc:mysql://localhost:3310/ksj1</property>
<property name="hibernate.connection.username">anant</property>
<property name="hibernate.connection.password">Euphoria</property>
<!-- SQL Propery -->
<property name="show_sql">true</property>
<property name="format_sql">true</property>
<property name="hibernate.hbm2ddl.auto">update</property>
<!-- Mapping file name-->
<mapping class="manyToMany.ManyToManyAssignment.Question"/>
<mapping class="manyToMany.ManyToManyAssignment.Answer"/>

</session-factory>
</hibernate-configuration> 